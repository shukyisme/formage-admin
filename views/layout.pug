html(lang='en')
    head
        meta(http-equiv='Content-type', content='text/html; charset=utf-8')
        title!= pageTitle

        link(rel='stylesheet', href=rootPath + '/css/ui-lightness/jquery-ui-1.10.2.custom.css', charset='utf-8')
        link(rel='stylesheet', href=rootPath + '/css/bootstrap.css', charset='utf-8')
        link(rel='stylesheet', href=rootPath + '/css/main.css', charset='utf-8')
        link(rel='stylesheet', href=rootPath + '/css/forms.css', charset='utf-8')

        script(src=rootPath + '/js/lib/jquery-1.9.1.js')
        script(src=rootPath + '/js/lib/jquery-ui-1.10.2.custom.min.js')
        script(src=rootPath + '/js/lib/bootstrap.js')
        script(src=rootPath + '/js/dialog.js')
        script(type='text/javascript').
            var root = '/melech';

        != typeof(renderedHead) != 'undefined' ? renderedHead : ''

        block head
    body
        - if(!dialog)
            header.navbar.navbar-static-top
                .navbar-inner
                    .container
                        block nav
                            .btn-group.pull-right
                                each t in tabs
                                    if !t.hide
                                        a.btn(href='${rootPath}/${t.root}',class=tab == t.root ? 'active' : '')
                                            i.icon-white
                                            | #{t.label}
                                a.btn.btn-inverse(href=rootPath)
                                    i.icon-home.icon-white
                                    | Admin
                                a.btn(href="/")
                                    i.icon-share
                                    | Site
                                a.btn(href=rootPath + '/logout')
                                    .icon-lock
                                    | Logout
                        h1
                            block title
                                a(href=rootPath) #{adminTitle}
                            block breadcrumb
                        - if(typeof(userPanel) != 'undefined' && userPanel)
                            .user-panel.
                                !{userPanel}
        .container
            #content
                block body

            - if(!dialog)
                footer.footer
                    p
                        a(href='http://github.com/Empeeric/formage-admin') Formage-Admin
                        | , from&nbsp;
                        a(href='http://empeeric.com') Empeeric
                    a(href='http://github.com/Empeeric/formage-admin')
                        img(src=rootPath + '/images/logo-40.png')

        block scripts